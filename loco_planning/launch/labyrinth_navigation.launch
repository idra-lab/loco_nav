<?xml version="1.0"?>
<launch>

  <!-- Parameters -->
  <arg name="use_gui" default="true" />
  <arg name="use_rviz" default="true" />
  <arg name="world_name" default="labyrinth.world" />
  <arg name="slam_params_file" default="$(find slam_toolbox)/config/mapper_params_online_async.yaml" />


  <!--if  true it starts lidar-->
  <arg name="sensors" default="true" />
  <arg name="spawn_x" default="0.0" />
  <arg name="spawn_y" default="0." />
  <arg name="spawn_z" default="0.2" />
  <arg name="spawn_Y" default="0.0" />

  <arg name="robot_id" value="0" />

  <!-- Set parameters -->
  <param name="use_sim_time" value="true" />
  <env name="GAZEBO_MODEL_PATH" value="$(find map_pkg)/models" />
  <env name="GAZEBO_RESOURCE_PATH" value="$(find map_pkg)/worlds" />


  <!--Start  gazebo-->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find map_pkg)/worlds/$(arg world_name)" />
    <arg name="paused" value="false" />
    <arg name="use_sim_time" value="true" />
    <arg name="gui" value="$(arg use_gui)" />
    <arg name="headless" value="false" />
    <arg name="debug" value="false" />
    <arg name="verbose" value="true" />
  </include>

  <!-- Spawn limo0 in simulation -->
  <group ns="limo0">
    <!--load
      urdf in robot_description rosparam-->
    <include file="$(find limo_description)/launch/upload.launch">
      <arg name="robot_id" default="$(arg robot_id)" />
      <arg name="sensors" default="$(arg sensors)" />
    </include>

    <!-- Spawn limo0 in simulation -->
    <node name="spawn_model" pkg="gazebo_ros" type="spawn_model"
      args="-urdf -param robot_description -model limo$(arg robot_id) -param robot_description -model limo0 -x $(arg spawn_x) -y $(arg spawn_y) -z $(arg spawn_z)  -Y $(arg spawn_Y)" />

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
      output="screen">
      <param name="publish_frequency" value="100" />
    </node>
    
    <!-- this is only needed if you do not run gmapping-->		
    <!--node pkg="tf2_ros" type="static_transform_publisher" name="map_to_limo$(arg robot_id)_odom"
      args="0 0 0 0 0 0 map limo$(arg robot_id)/odom" /-->
  </group>

  <node pkg="rviz" type="rviz" name="rviz" if="$(arg use_rviz)"
    args="-d $(find loco_planning)/rviz/conf_navigation.rviz" />

  <!-- SLAM Toolbox (Asynchronous mode) -->
  <node pkg="slam_toolbox" type="async_slam_toolbox_node" name="slam_toolbox" output="screen">
    <!-- Remap topics -->
    <remap from="scan" to="/limo0/scan" />
    <remap from="odom" to="/limo0/odom" />

    <!-- Frames -->
    <param name="map_frame"  value="map" />
    <param name="odom_frame" value="limo0/odom" />
    <param name="base_frame" value="limo0/base_link" />

    <!-- General settings -->
    <param name="use_sim_time" value="true" />
    <param name="slam_params_file" value="$(arg slam_params_file)" />

    <!-- Enable loop closure visualization -->
    <param name="show_laser" value="true" />
    <param name="loop_closure_visualization" value="true" />
  </node>

 

    <!-- Move base node -->
<node pkg="move_base" type="move_base" name="move_base" output="screen" >
  <!-- Planners -->
  <param name="base_global_planner" value="navfn/NavfnROS" />
  <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" /> <!-- teb_local_planner/TebLocalPlannerROS dwa_local_planner/DWAPlannerROS -->

<rosparam file="$(find loco_planning)/config/move_base/move_base_params.yaml" command="load"/>

<rosparam file="$(find loco_planning)/config/move_base/costmap_common_params.yaml" command="load" ns="global_costmap" />
<rosparam file="$(find loco_planning)/config/move_base/costmap_common_params.yaml" command="load" ns="local_costmap" />
<rosparam file="$(find loco_planning)/config/move_base/global_costmap_params.yaml" command="load" />
<rosparam file="$(find loco_planning)/config/move_base/local_costmap_params.yaml" command="load" />
<rosparam file="$(find loco_planning)/config/move_base/dwa_local_planner_params.yaml" command="load" />
<rosparam file="$(find loco_planning)/config/move_base/teb_local_planner_params.yaml" command="load" />

  <!-- Topic remappings -->
  <remap from="cmd_vel" to="/limo0/cmd_vel" />
  <remap from="odom" to="/limo0/odom" />
  <remap from="scan" to="/limo0/scan" />
  <remap from="map" to="/map" />
</node>

</launch>
